---
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
---

<html lang="ja">
  <head>
    <title>ブログ記事一覧</title>
    <style>
      body {
        background: #161616;
        color: #f0f0f0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
        margin: 0;
        padding: 0 0 40px 0;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2.5rem 1.5rem;
      }
      h1 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
      }
      ul {
        list-style: none;
        padding: 0;
      }
      li {
        background: #23242b;
        border-radius: 8px;
        margin-bottom: 1.4em;
        box-shadow: 0 2px 16px #000a  ;
        transition: box-shadow .23s;
      }
      li:hover {
        box-shadow: 0 6px 34px #4a9eff88;
      }
      .title {
        font-size: 1.3rem;
        font-weight: bold;
        padding: 1.0em 1em 0.1em 1em;
        margin: 0;
      }
      .desc {
        color: #90c4ff;
        font-size: 1rem;
        padding: 0 1em 0.8em 1em;
      }
      .date {
        font-size: 0.96rem;
        color: #b8b9be;
        padding: 0 1em 1em 1em;
      }
      a { text-decoration: none; color:inherit; display:block; }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>ブログ記事一覧</h1>
      <ul>
        {posts
          .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
          .map((post) => (
            <li>
              <a href={`/blog/${post.id}/`}>
                <div class="title">{post.data.title}</div>
                <div class="desc">{post.data.description ?? ''}</div>
                <div class="date">{post.data.pubDate.toLocaleDateString?.() ?? String(post.data.pubDate)}</div>
              </a>
            </li>
          ))}
      </ul>
    </div>
  </body>
</html>
