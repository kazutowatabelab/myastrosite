---
const { title, pubDate } = Astro.props;
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<title>{title}</title>
	</head>
	<body style="background-color: #1a1a1a; color: white; padding: 50px;">
		<h1>{title}</h1>
		<p>公開日: {pubDate}</p>
		<hr />
		<div class="content">
			<slot />
		</div>
	</body>
</html>