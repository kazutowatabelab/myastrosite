---
import { Image, type ImageMetadata } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
	pubDate: Date | string;
	description?: string;
	heroImage?: ImageMetadata;
	updatedDate?: Date | string;
}

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={title} description={description || ''} />
		<style>
			:root {
				--bg-primary: #0a0a0f;
				--bg-secondary: #121218;
				--bg-card: #1a1a24;
				--text-primary: #e8e8e8;
				--text-secondary: #a0a0a8;
				--accent: #4a9eff;
				--accent-hover: #6bb3ff;
				--border: #2a2a35;
			}

			body {
				background: var(--bg-primary);
				color: var(--text-primary);
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
				margin: 0;
				padding: 0;
			}

			main {
				width: 100%;
				margin: 0;
				padding: 0;
			}

			.article-container {
				max-width: 800px;
				margin: 0 auto;
				padding: 4rem 2rem;
			}

			.article-header {
				margin-bottom: 3rem;
			}

			.hero-image-container {
				width: 100%;
				margin-bottom: 2.5rem;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
			}

			.hero-image-container img {
				display: block;
				width: 100%;
				height: auto;
				object-fit: cover;
			}

			.article-title {
				font-size: 3rem;
				font-weight: 700;
				margin: 0 0 1.5rem 0;
				color: var(--text-primary);
				line-height: 1.2;
				letter-spacing: -0.02em;
			}

			.article-meta {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				margin-bottom: 2rem;
			}

			.article-date {
				font-size: 1rem;
				color: var(--accent);
				font-weight: 500;
			}

			.article-updated {
				font-size: 0.9rem;
				color: var(--text-secondary);
				font-style: italic;
			}

			.article-content {
				color: var(--text-primary);
				font-size: 1.125rem;
				line-height: 1.8;
			}

			/* Markdownコンテンツのスタイルを確実に適用 */
			.article-content :global(*) {
				color: inherit;
			}

			.article-content :global(p) {
				margin-bottom: 1.5rem;
			}

			.article-content h1,
			.article-content h2,
			.article-content h3,
			.article-content h4,
			.article-content h5,
			.article-content h6 {
				color: var(--text-primary);
				margin-top: 2rem;
				margin-bottom: 1rem;
				font-weight: 700;
				line-height: 1.3;
			}

			.article-content h1 {
				font-size: 2.5rem;
			}

			.article-content h2 {
				font-size: 2rem;
			}

			.article-content h3 {
				font-size: 1.75rem;
			}

			.article-content p {
				margin-bottom: 1.5rem;
			}

			.article-content a {
				color: var(--accent);
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.article-content a:hover {
				color: var(--accent-hover);
				text-decoration: underline;
			}

			.article-content code {
				background: var(--bg-card);
				padding: 0.2em 0.4em;
				border-radius: 4px;
				font-size: 0.9em;
				color: var(--accent);
				border: 1px solid var(--border);
			}

			.article-content pre {
				background: var(--bg-card);
				padding: 1.5rem;
				border-radius: 8px;
				overflow-x: auto;
				margin-bottom: 1.5rem;
				border: 1px solid var(--border);
			}

			.article-content pre code {
				background: transparent;
				padding: 0;
				border: none;
				color: var(--text-primary);
			}

			.article-content blockquote {
				border-left: 4px solid var(--accent);
				padding-left: 1.5rem;
				margin: 1.5rem 0;
				color: var(--text-secondary);
				font-style: italic;
			}

			.article-content ul,
			.article-content ol {
				margin-bottom: 1.5rem;
				padding-left: 2rem;
			}

			.article-content li {
				margin-bottom: 0.5rem;
			}

			.article-content img {
				max-width: 100%;
				height: auto;
				border-radius: 8px;
				margin: 1.5rem 0;
			}

			.article-content hr {
				border: none;
				border-top: 1px solid var(--border);
				margin: 2rem 0;
			}

			.article-content strong,
			.article-content b {
				font-weight: 700;
				color: var(--text-primary);
			}

			.article-content em,
			.article-content i {
				font-style: italic;
			}

			@media (max-width: 768px) {
				.article-container {
					padding: 2rem 1.5rem;
				}

				.article-title {
					font-size: 2rem;
				}

				.article-content {
					font-size: 1rem;
				}

				.article-content h1 {
					font-size: 1.75rem;
				}

				.article-content h2 {
					font-size: 1.5rem;
				}

				.article-content h3 {
					font-size: 1.25rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="article-container">
				<header class="article-header">
					{heroImage && (
						<div class="hero-image-container">
							<Image width={1200} height={600} src={heroImage} alt={title} />
						</div>
					)}
					<h1 class="article-title">{title}</h1>
					<div class="article-meta">
						<p class="article-date">
							<FormattedDate date={typeof pubDate === 'string' ? new Date(pubDate) : pubDate} />
						</p>
						{updatedDate && (
							<p class="article-updated">
								最終更新: <FormattedDate date={typeof updatedDate === 'string' ? new Date(updatedDate) : updatedDate} />
							</p>
						)}
					</div>
				</header>
				<div class="article-content">
					<slot />
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

