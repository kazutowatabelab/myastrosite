---
interface Props {
	title: string;
	pubDate: string | Date;
	lang?: string;
	postId?: string;
}

const { title, pubDate, lang = 'ja', postId } = Astro.props;
const publishedDate = typeof pubDate === 'string' ? new Date(pubDate) : pubDate;
const htmlLang = lang || 'ja';

// 言語切り替えリンクの生成
let langSwitchLink: string | null = null;
let langSwitchLabel: string = '';

if (postId) {
	const currentLang = lang === 'en' ? 'en' : 'jp';
	const targetLang = currentLang === 'en' ? 'jp' : 'en';
	langSwitchLink = `/blog/${targetLang}/${postId}/`;
	langSwitchLabel = currentLang === 'en' ? '日本語版' : 'English';
}
---
<!DOCTYPE html>
<html lang={htmlLang}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        background: #1a1a1a;
        color: #fff;
        padding: 40px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
      }
      .article {
        max-width: 720px;
        margin: 0 auto;
        background: #22232b;
        border-radius: 14px;
        box-shadow: 0 4px 32px rgba(0,0,0,0.13);
        padding: 3rem 2rem;
      }
      .article h1 {
        font-size: 2.3rem;
        font-weight: bold;
        margin: 0 0 0.7em 0;
      }
      .article .meta {
        color: #7ac9f9;
        font-size: 1.08em;
        margin-bottom: 2.1em;
      }
      .article hr {
        border: none;
        border-top: 1px solid #333;
        margin: 2em 0;
      }
      .article :global(h2) {
        margin-top: 2em;
        color: #61dafb;
      }
      .article :global(a) {
        color: #93edff;
        text-decoration: underline;
      }
      .article :global(p) {
        margin-bottom: 1.3em;
      }

      .lang-switcher {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2em;
        padding-bottom: 1em;
        border-bottom: 1px solid #333;
      }

      .lang-switcher a {
        color: #7ac9f9;
        text-decoration: none;
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        border: 1px solid #444;
        border-radius: 4px;
        transition: all 0.2s ease;
      }

      .lang-switcher a:hover {
        background: #333;
        border-color: #7ac9f9;
        color: #93edff;
      }

    </style>
  </head>
  <body>
    <main class="article">
      {langSwitchLink && (
        <div class="lang-switcher">
          <span>{htmlLang === 'en' ? 'Language:' : '言語:'}</span>
          <a href={langSwitchLink}>{langSwitchLabel}</a>
        </div>
      )}
      <h1>{title}</h1>
      <div class="meta">
		{htmlLang === 'en' 
			? `Published: ${publishedDate.toLocaleDateString('en-US')}`
			: `公開日: ${publishedDate.toLocaleDateString('ja-JP')}`
		}
	  </div>
      <hr />
      <slot />
    </main>
  </body>
</html>
