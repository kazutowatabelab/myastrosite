---
import Layout from './BlogPost.astro'; 

const {  
  title,  
  description,  
  publishedAt,  
  updatedAt,  
  eyecatch,  
  content, 
  lang = 'jp'
} = Astro.props;

// 日付の取得先を統一
const rawDate = publishedAt || content?.publishedAt;
const isEn = lang === 'en';
const displayTitle = (isEn && content?.title_en) ? content.title_en : (title || content?.title);

// 言語切り替え用のURLを作成
const { pathname } = Astro.url;
const currentPathWithoutLang = pathname.replace(/^\/(jp|en)/, '');
const jpPath = `/blog/jp${currentPathWithoutLang.replace('/blog/jp', '').replace('/blog/en', '')}`;
const enPath = `/blog/en${currentPathWithoutLang.replace('/blog/jp', '').replace('/blog/en', '')}`;
---

<Layout title={displayTitle} description={description || content?.description} pubDate={rawDate} lang={lang}>
  <main class="container">
    <div class="lang-switcher">
      <a href={jpPath} class={lang === 'jp' ? 'active' : ''}>日本語</a>
      <span>/</span>
      <a href={enPath} class={lang === 'en' ? 'active' : ''}>English</a>
    </div>

    <article class="blog-post">
      {eyecatch && (
        <img src={eyecatch.url} width={eyecatch.width} height={eyecatch.height} alt={displayTitle} class="eyecatch" />
      )}
      
      <header class="header">
        <h1 class="title">{displayTitle}</h1>
      </header>

      <div class="content">
        <slot />
      </div>
    </article>
  </main>
</Layout>

<style>
  .lang-switcher {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }
  .lang-switcher a {
    text-decoration: none;
    color: #888;
  }
  .lang-switcher a.active {
    color: #000;
    font-weight: bold;
    text-decoration: underline;
  }
  /* 以下、既存のスタイル */
  .container { max-width: 800px; margin: 0 auto; padding: 2rem 1rem; }
  .blog-post { display: flex; flex-direction: column; gap: 2rem; }
  .eyecatch { width: 100%; height: auto; border-radius: 8px; object-fit: cover; }
  .header { border-bottom: 1px solid #eee; padding-bottom: 1rem; }
  .title { font-size: 2.5rem; margin: 0; }
  .content { line-height: 1.8; }
</style>
