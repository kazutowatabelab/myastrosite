---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
	description: string;
	pubDate?: Date | string; // 文字列でも受け取れるように拡張
	updatedDate?: Date | string;
	heroImage?: string;
	lang?: string; // 言語コード
}

const { title, description, pubDate, updatedDate, heroImage, lang = 'ja' } = Astro.props;

// 日付が文字列（String）で届いてもエラーにならないよう Date オブジェクトに変換
const displayPubDate = pubDate ? new Date(pubDate) : null;
const displayUpdatedDate = updatedDate ? new Date(updatedDate) : null;

// SEO用の構造化データ (JSON-LD)
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": heroImage ? [heroImage] : [],
  "datePublished": displayPubDate ? displayPubDate.toISOString() : "",
  "dateModified": displayUpdatedDate ? displayUpdatedDate.toISOString() : (displayPubDate ? displayPubDate.toISOString() : ""),
  "author": {
    "@type": "Person",
    "name": "Mirai Anchorage Japan" 
  }
};
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} image={heroImage} type="article" />
		<meta name="google-site-verification" content="423s3g5USTWu7mAnfbUbmZKaCvx26tnHg1wV1JhePIo" />
		
		<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

		<style>
			:root {
				--bg-primary: #0a0a0f;
				--bg-secondary: #121218;
				--bg-card: #1a1a24;
				--text-primary: #e8e8e8;
				--text-secondary: #a0a0a8;
				--accent: #4a9eff;
				--accent-hover: #6bb3ff;
				--border: #2a2a35;
			}

			body {
				background: var(--bg-primary);
				color: var(--text-primary);
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
				margin: 0;
				padding: 0;
			}

			main {
				width: 100%;
				margin: 0;
				padding: 0;
			}

			.article-container {
				max-width: 800px;
				margin: 0 auto;
				padding: 4rem 2rem;
			}

			.article-header {
				margin-bottom: 2rem;
			}

			.hero-image-container {
				width: auto;
				margin-bottom: 2.5rem;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
				display: flex;
				justify-content: flex-start;
			}

			.hero-image-container img {
				display: block;
				width: 150px;
				height: auto;
				object-fit: cover;
			}

			.article-title {
				font-size: 3rem;
				font-weight: 700;
				margin: 0 0 1.5rem 0;
				color: var(--text-primary);
				line-height: 1.2;
				letter-spacing: -0.02em;
			}

			.article-meta {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				margin-bottom: 2rem;
			}

			.article-date {
				font-size: 1rem;
				color: var(--accent);
				font-weight: 500;
			}

			.article-updated {
				font-size: 0.9rem;
				color: var(--text-secondary);
				font-style: italic;
			}

			.ad-space {
				background: var(--bg-card);
				border: 1px dashed var(--border);
				border-radius: 8px;
				padding: 1.5rem;
				margin: 2rem 0;
				text-align: center;
				color: var(--text-secondary);
				font-size: 0.9rem;
			}
			.ad-label {
				display: block;
				font-size: 0.7rem;
				margin-bottom: 0.5rem;
				text-transform: uppercase;
				letter-spacing: 0.1em;
			}

			.article-content {
				color: var(--text-primary);
				font-size: 1.125rem;
				line-height: 1.8;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="article-container">
				<header class="article-header">
					{heroImage && (
						<div class="hero-image-container">
							<img src={heroImage} alt={title} />
						</div>
					)}
					<h1 class="article-title">{title}</h1>
					<div class="article-meta">
						{displayPubDate && (
							<p class="article-date">
								<FormattedDate date={displayPubDate} />
							</p>
						)}
						{displayUpdatedDate && (
							<p class="article-updated">
								Last Updated: <FormattedDate date={displayUpdatedDate} />
							</p>
						)}
					</div>
				</header>

				<div class="ad-space">
					<span class="ad-label">Advertisement</span>
					<p>Sponsored Content</p>
				</div>

				<div class="article-content">
					<slot />
				</div>

				<div class="ad-space">
					<span class="ad-label">Advertisement</span>
					<p>Sponsored Content</p>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>