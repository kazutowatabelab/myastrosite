---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

// Propsの型を CollectionEntry に依存せず、直接定義して柔軟にします
interface Props {
	title: string;
	description: string;
	pubDate?: Date; // ? をつけて、なくてもOKにします
	updatedDate?: Date;
	heroImage?: string;
}

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
		<meta name="google-site-verification" content="423s3g5USTWu7mAnfbUbmZKaCvx26tnHg1wV1JhePIo" />
		
		<style>
			:root {
				--bg-primary: #0a0a0f;
				--bg-secondary: #121218;
				--bg-card: #1a1a24;
				--text-primary: #e8e8e8;
				--text-secondary: #a0a0a8;
				--accent: #4a9eff;
				--accent-hover: #6bb3ff;
				--border: #2a2a35;
			}

			body {
				background: var(--bg-primary);
				color: var(--text-primary);
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
				margin: 0;
				padding: 0;
			}

			main {
				width: 100%;
				margin: 0;
				padding: 0;
			}

			.article-container {
				max-width: 800px;
				margin: 0 auto;
				padding: 4rem 2rem;
			}

			.article-header {
				margin-bottom: 3rem;
			}

			.hero-image-container {
				width: auto;
				margin-bottom: 2.5rem;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
				display: flex;
				justify-content: flex-start;
			}

			.hero-image-container img {
				display: block;
				width: 150px;
				height: auto;
				object-fit: cover;
			}

			.article-title {
				font-size: 3rem;
				font-weight: 700;
				margin: 0 0 1.5rem 0;
				color: var(--text-primary);
				line-height: 1.2;
				letter-spacing: -0.02em;
			}

			.article-meta {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				margin-bottom: 2rem;
			}

			.article-date {
				font-size: 1rem;
				color: var(--accent);
				font-weight: 500;
			}

			.article-updated {
				font-size: 0.9rem;
				color: var(--text-secondary);
				font-style: italic;
			}

			.article-content {
				color: var(--text-primary);
				font-size: 1.125rem;
				line-height: 1.8;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="article-container">
				<header class="article-header">
					{heroImage && (
						<div class="hero-image-container">
							<img src={heroImage} alt={title} />
						</div>
					)}
					<h1 class="article-title">{title}</h1>
					<div class="article-meta">
						{pubDate && (
							<p class="article-date">
								<FormattedDate date={pubDate} />
							</p>
						)}
						{updatedDate && (
							<p class="article-updated">
								Last Updated: <FormattedDate date={updatedDate} />
							</p>
						)}
					</div>
				</header>
				<div class="article-content">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>